rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”¹ USERS COLLECTION
    // Each authenticated user can access only their own user document.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // ðŸ”¹ INVENTORY COLLECTION
    // All logged-in users can read/write inventory items.
    match /inventory/{itemId} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }

    // ðŸ”¹ SALES COLLECTION
    // Logged-in users can create and read sales records (bills),
    // but not modify or delete existing ones.
    match /sales/{saleId} {
      allow create: if request.auth != null;
      allow read, list: if request.auth != null;
      allow update, delete: if false;
    }

    // ðŸ”¹ DEFAULT FALLBACK
    // Deny access to everything else.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
