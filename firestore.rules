rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow only authenticated users to read/write
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Users collection — each user can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Inventory collection — accessible to all logged-in users
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }

    // Sales collection — accessible to all logged-in users
    match /sales/{saleId} {
      allow read, write: if request.auth != null;
    }
  }
}
